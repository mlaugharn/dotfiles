
filetype plugin indent on
 syntax enable

 set termguicolors
 set number
 set showtabline=2
 set ignorecase
 set smartcase
 set autoindent
 set ruler
 set showcmd
 set incsearch
 set so=7
 set cmdheight=2
 set selectmode+=mouse
 set textwidth=120
 set foldcolumn=1
 if has('mouse')
   set mouse=a
 endif
 set lazyredraw
 set showmatch
 set mat=2
 set wildmenu
 set ai
 set si
 set expandtab
 set smarttab
 set shiftwidth=4
 set tabstop=4
 set lbr
 set wrap
 set background=dark
 set encoding=utf8
 set laststatus=2
 set clipboard=unnamed # windows clipboard
 # mouse split control under tmux
 if has("mouse_sgr")
     set ttymouse=sgr
 else
     set ttymouse=xterm2
 end
